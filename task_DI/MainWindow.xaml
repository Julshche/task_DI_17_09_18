    <Border Margin="12" CornerRadius="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.9" 
                              Direction="-60"
                              BlurRadius="20"
                              ShadowDepth="7" />
        </Border.Effect>

        <Grid Background="White">

            <Grid VerticalAlignment="Top" Background="LightSkyBlue">
                <TextBlock Padding="8"
                               VerticalAlignment="Center"
                               Text="MAINWINDOW"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16" />
                <StackPanel Height="35" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                                            x:Name="MinimizeButton" 
                                            Grid.Column="2"
                                            VerticalAlignment="Top"
                                            Width="34"
                                            Height="34"
                                            BorderBrush="{x:Null}" 
                                            Background="{x:Null}"
                                            
                                            >

                        <Path
                                                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    StrokeThickness="1"
                                                    Stretch="None"
                                                    RenderOptions.EdgeMode="Aliased"
                                                    Data="M0,6 H8 M0,7 H8 M0,6 H8"
                                                    />
                    </Button>
                    <Button
                                            x:Name="MaximizeButton" 
                                            VerticalAlignment="Top"
                                            Width="35"
                                            Height="33"
                                            BorderBrush="{x:Null}" 
                                            Background="{x:Null}"       
                                            >
                        <Path
                                                    x:Name="PART_MaxButton_Path"
                                                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    StrokeThickness="1"
                                                    Stretch="None"
                                                    RenderOptions.EdgeMode="Aliased"
                                                    Data="M0,0 H10 V10 H0 V0 M0,1 H9 M0,2 H10"
                                                    />
                    </Button>
                    <Button
                                            Grid.Column="4"
                                            x:Name="CloseButton" 
                                            VerticalAlignment="Top"
                                            Width="34"
                                            Height="34"
                                            BorderBrush="{x:Null}" 
                                            Background="{x:Null}"
                                         
                                            >

                        <Path
                                                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    StrokeThickness="1.5"
                                                    Stretch="None"
                                                    Data="M0,0 L8,8 M0,8 L8,0"
                                                    />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Margin="0 37 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" ></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--ItemTemplateSelector="{StaticResource MyDataTemplateSelector}"-->
               
                    <!--<ListBox x:Name="MyList"
               ItemContainerStyle="{StaticResource IContainerStyle}"
               ItemTemplate="{StaticResource MyTaskTemplate}"
              ItemsSource="{Binding Source={StaticResource dataList}}" 
